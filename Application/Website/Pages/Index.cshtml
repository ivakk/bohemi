@page
@model IndexModel
@{
    @if (Model.IsLoggedIn == true)
    {
        Layout = "_LoggedInLayout";
    }
    ViewData["Title"] = "Home page";
}

@section Styles {
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Piano Bar</title>
    <link rel="stylesheet" href="~/css/Index.css">
}

<div id="pianoBarCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="images/piano1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Live Music Nights</h5>
                <p>Experience unforgettable evenings with the best live music in town.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/piano2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Exquisite Cocktails</h5>
                <p>Our bartenders create the perfect cocktails to match the mood of the music.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="images/piano3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Stylish Ambiance</h5>
                <p>Relax in a setting that's as refined as our music selection.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#pianoBarCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#pianoBarCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<section class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <h2>About Us</h2>
            <p>Discover the history and passion behind our piano bar, offering the best live music and drinks in the city.</p>
        </div>
        <div class="col-md-4">
            <h2>Our Menu</h2>
            <p>Explore our selection of fine wines, craft beers, and signature cocktails crafted by experienced mixologists.</p>
        </div>
        <div class="col-md-4">
            <h2>Visit Us</h2>
            <p>Located in the heart of the city, our piano bar is the perfect spot for a night out. Check our schedule for special events.</p>
        </div>
    </div>
</section>


@section Scripts {
    <!-- JavaScript -->
    <script src="~/js/script.js" defer></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
}
