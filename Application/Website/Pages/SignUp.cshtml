@page
@model Website.Pages.SignUpModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/LoginSignup.css">

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <!-- Error Modal -->
    <div id="errorModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="errorMessage"></p>
        </div>
    </div>

    <section class="contain forms">
        <div class="form login">
            <div class="form-content">
                <div class="topform">Signup</div>
                <form method="post" novalidate>
                    <div class="field input-field">
                        <input type="text" asp-for="Username" placeholder="Username *" class="input">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Grouping First name and Last name -->
                    <div class="fields-row">
                        <div class="field input-field half">
                            <input type="text" asp-for="FirstName" placeholder="First name *" class="input">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="field input-field half">
                            <input type="text" asp-for="LastName" placeholder="Last name *" class="input">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field input-field">
                        <input type="email" asp-for="Email" placeholder="Email *" class="input">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="field input-field">
                        <input type="tel" asp-for="PhoneNumber" placeholder="Phone number *" class="input">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <!-- Grouping Password and Confirm Password -->
                    <div class="fields-row">
                        <div class="field input-field half">
                            <input type="password" asp-for="Password" placeholder="Password *" class="password">
                            <i class='bx bx-hide eye-icon'></i>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="field input-field half">
                            <input type="password" asp-for="ConfirmPassword" placeholder="Confirm password *" class="password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="field input-field">
                        <input type="datetime" asp-for="Birthdate" placeholder="Birthdate *" class="input">
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>

                    <div class="field button-field">
                        <input type="submit" class="button" value="Sign Up">
                    </div>
                </form>


                <div class="form-link">
                    <span>Already have an account? <a href="/Login" class="link login-link">Login</a></span>
                </div>
            </div>

            <div class="line"></div>

            <div class="media-options">
                <a href="#" class="field facebook">
                    <i class='bx bxl-facebook facebook-icon'></i>
                    <span>Login with Facebook</span>
                </a>
            </div>

            <div class="media-options">
                <a href="#" class="field google">
                    <img src="#" alt="" class="google-img">
                    <span>Login with Google</span>
                </a>
            </div>

        </div>
    </section>

    <!-- JavaScript -->
    <script>
        document.getElementById('birthdate').addEventListener('blur', function () {
            if (!this.value) {
                this.type = 'text';
            }
        });
    </script>
    <script src="js/LoginSignup.js"></script>
</body>
